<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_margin="10dp">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="175dp" android:layout_height="170dp"
                   android:scaleType="fitXY" android:id="@+id/carImage"
                   android:src="@drawable/avatar"
                   android:cropToPadding="true"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:background="@drawable/btn_car_price" android:layout_height="wrap_content"
                      android:paddingLeft="7dp"
                      android:paddingRight="7dp"
                      android:orientation="horizontal"
                      android:layout_gravity="top"
                      android:gravity="center">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/priceCar"
                      android:text="25,000" android:textColor="#000"
                      android:textSize="18sp" android:fontFamily="@font/font_bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                      android:text="$" android:textColor="#27AE60"
                      android:textSize="20sp" android:textStyle="bold"
                      android:fontFamily="@font/font_bold" android:gravity="center" android:layout_marginLeft="3dp"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="175dp" android:layout_height="wrap_content"
                   android:elevation="10dp"
                  android:background="@drawable/back_number" android:paddingLeft="5dp">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content"
                android:layout_gravity="center">
                    <TextView android:layout_width="134dp" android:layout_height="wrap_content"
                              android:textSize="18sp" android:textAlignment="textEnd"
                              android:textColor="#000"
                              android:fontFamily="@font/font_regular"
                              android:text="location"/>
                    <ImageView android:layout_width="35dp" android:layout_height="match_parent"
                               android:src="@drawable/ic_location_on_black_24dp" android:layout_margin="3dp"/>
                </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
            <TextView android:layout_width="134dp" android:layout_height="match_parent"
                      android:textSize="18sp" android:textAlignment="textEnd"
                      android:textColor="#000"
                      android:fontFamily="@font/font_regular"
                      android:text="location"/>
            <ImageView android:layout_width="35dp" android:layout_height="match_parent"
                       android:src="@drawable/ic_call_back" android:layout_margin="3dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>