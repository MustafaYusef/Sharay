<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:layout_height="wrap_content">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"

                app:cardElevation="0dp">

            <ImageView android:layout_width="match_parent" android:layout_height="170dp"
                       android:scaleType="fitXY" android:id="@+id/storeImage"
                       android:src="@drawable/car"
                       android:cropToPadding="true"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_gravity="bottom"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:background="#99000000"
                      android:weightSum="2" android:padding="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1" android:gravity="center">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="29,000 MI"
                          android:textSize="18sp"
                          android:textColor="#fff"
                          android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                          android:id="@+id/storeTitle" android:fontFamily="@font/font_bold"/>
            </LinearLayout>



        </LinearLayout>
    </FrameLayout>




    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent" android:layout_height="wrap_content"

                  android:background="@drawable/back_number" android:paddingLeft="5dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center">
                <ImageView android:layout_width="35dp" android:layout_height="match_parent"
                           android:src="@drawable/ic_location_on_black_24dp" android:layout_margin="3dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="18sp" android:textAlignment="textEnd"
                          android:textColor="#000"
                          android:id="@+id/locStore"
                          android:fontFamily="@font/font_regular"
                          android:text="location" android:gravity="end"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"

                          android:layout_height="wrap_content"
                          android:layout_gravity="center">
                <ImageView android:layout_width="35dp" android:layout_height="match_parent"
                           android:src="@drawable/ic_call_back" android:layout_margin="3dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textSize="18sp" android:textAlignment="textEnd"
                          android:textColor="#000"
                          android:fontFamily="@font/font_regular"
                          android:text="phone"
                          android:id="@+id/phoneStore" android:gravity="end"/>

            </LinearLayout>
        </LinearLayout>

        <ImageButton android:layout_width="40dp" android:layout_height="40dp"
                     android:src="@drawable/ic_call_black_24dp"
                     android:padding="4dp"

                     android:layout_margin="5dp"
                     android:background="@drawable/phone" android:id="@+id/callNumber"/>
    </LinearLayout>
</LinearLayout>