<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/round_slang" android:gravity="center" android:layout_marginBottom="20dp"
              android:paddingBottom="10dp">


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="@color/white" android:layout_margin="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/changeLang" android:fontFamily="@font/font_regular"
                  android:textSize="24sp" android:gravity="center"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="#d3d3d3"></LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/white" android:layout_margin="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="English" android:fontFamily="@font/font_regular"
                  android:textColor="@color/black"
                  android:textSize="22sp" android:gravity="center" android:id="@+id/changeEnglish"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="#d3d3d3"></LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/white" android:layout_margin="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="العربية" android:fontFamily="@font/font_regular"
                  android:textColor="@color/black"
                  android:textSize="22sp" android:gravity="center" android:id="@+id/changeArbic"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp" android:background="@drawable/round_slang"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp">
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/cancel" android:fontFamily="@font/font_bold"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="20sp" android:gravity="center" app:backgroundTint="@color/gray"
                app:cornerRadius="20dp"
                android:id="@+id/closeLang" android:padding="5dp" app:strokeColor="@color/black"
                android:shadowColor="@color/black"/>

    </LinearLayout>
</LinearLayout>