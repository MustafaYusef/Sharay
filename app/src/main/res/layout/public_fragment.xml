<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.sections.carrent.CareRent">
    <com.airbnb.lottie.LottieAnimationView
            android:inputType="textEmailAddress|textNoSuggestions"
            android:visibility="invisible"
            android:id="@+id/animation_loadingSections"
            android:layout_width="234dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/loading_animation"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"


            android:translationZ="1dp"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/ToolBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary" android:gravity="center"
                android:layout_gravity="top"
                android:theme="@style/ToolBarTheme"
        >

            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:src="@drawable/ic_tune_black_24dp"
                         android:background="#00FFFFFF" android:layout_gravity="left"
                         android:visibility="invisible"

                         android:layout_marginRight="10dp" android:id="@+id/filterBtnP"/>

            <TextView android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                      android:fontFamily="@font/font_regular"
                      android:textSize="20sp"

                      android:gravity="center"
                      android:textColor="@color/white"

                       android:id="@+id/titlePublic"
                       android:layout_gravity="center"

                       />


        </androidx.appcompat.widget.Toolbar>
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/gray"
                                                   android:id="@+id/sectionsList"/>

    </LinearLayout>

</FrameLayout>