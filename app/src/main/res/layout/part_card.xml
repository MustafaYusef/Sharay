<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_margin="5dp">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

            <ImageView android:layout_width="165dp" android:layout_height="150dp"
                       android:scaleType="fitXY" android:id="@+id/partImage"
                       android:src="@drawable/car"
                       android:cropToPadding="true"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_gravity="bottom"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:background="#99000000"
                      android:weightSum="2">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:gravity="center">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="title"
                      android:textSize="16sp"
                      android:textColor="#fff"
                      android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                      android:id="@+id/titlePart" android:fontFamily="@font/font_bold"/>
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="165dp" android:layout_height="wrap_content"

                  android:background="@drawable/back_number" android:paddingLeft="5dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:textColor="#000"
                      android:layout_weight="1"
                      android:id="@+id/locPart"
                      android:gravity="right"
                      android:fontFamily="@font/font_regular"
                      android:text="location"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ic_location_on_black_24dp" android:layout_margin="3dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
            <TextView android:layout_width="134dp" android:layout_height="match_parent"
                      android:textSize="16sp"
                      android:textColor="#000"
                      android:gravity="right"
                      android:fontFamily="@font/font_regular"
                      android:text="phone"
                      android:layout_weight="1"
                      android:id="@+id/phonePart"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ic_call_back" android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
            <TextView android:layout_width="134dp" android:layout_height="match_parent"
                      android:textSize="16sp"
                      android:textColor="#000"
                      android:gravity="right"
                      android:fontFamily="@font/font_regular"
                      android:text="phone"
                      android:layout_weight="1"
                      android:id="@+id/detailsPart"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ic_error_outline_black_24dp" android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>